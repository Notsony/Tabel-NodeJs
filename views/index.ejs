<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DAFTAR KELAS NODE.JS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>
    <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">List Student</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Add Student</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled">Disabled</a>
        </li>
    </ul>

    <div class="container">
        <p></p>
        <h3><%= title %></h3>
        <p></p>
        <table class="table table-striped table-bordered border-dark" id="myTable">
        <thead>
            <tr class="table-success border-dark">
                <th scope="col">id</th>
                <th scope="col">Nama</th>
                <th scope="col">Kelas</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% for (let user of users) { %>
            <!--<% const nomor = user.id %>-->    
            <tr>
                <td scope="row"><%= user.id %></td>
                <th scope="row"><%= user.nama %></td>
                <td scope="row"><%= user.kelas %></td>
                <td>
                <form method="get" action="\delete\:id" >
                  <a class="btn btn-danger edit" href="../mahasiswa/delete/<%=user.id%>">Delete</a>
                </form>
                <!--<form method="delete" action="\delete\:id" >
                    <button type="summit" class="btn btn-danger" value= <%=user.id%> >Delete</button>
                  </form>-->
                </td>
            </tr>
            <% } %>
            
        </tbody>
        </table>

        <!--INSERT DATA-->
        <div class="dropdown">
          <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
            Tambah Data
          </button>
          <form class="dropdown-menu p-4" action="\tambah" method="post">
            <h3>Tambah Mahasiswa</h3><br>
            <div class="mb-3">
              <label for="nama" class="form-label">Nama Mahasiswa</label>
              <input type="text" name="nama" class="form-control">
            </div>
            <div class="mb-3">
              <label for="kelas" class="form-label">Pilih Kelas</label>
              <select class="form-select" name="kelas">
                <option selected value="D1">D1</option>
                <option value="D2">D2</option>
                <option value="D3">D3</option>
                <option value="D4">D4</option>
              </select>
              <!--<input type="text" name="kelas" class="form-control">-->
            </div>
            <button type="submit" class="btn btn-success">Tambahkan</button>
          </form>
        </div>

    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

</body>
</html>